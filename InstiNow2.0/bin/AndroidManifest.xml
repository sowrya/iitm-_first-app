<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.revenexant.iNow2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UserChoices"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.revenexant.iNow2.WINDOWPOINT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Home"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name=".ComplaintActivity"
            android:label="@string/title_activity_complaint"
            android:parentActivityName=".UserChoices">
        </activity>
        <activity
            android:name=".Thanks"
            android:label="@string/title_activity_thanks" >
        </activity>
        <activity
            android:name=".DisplayPosts"
            android:label="@string/title_activity_display_posts"
            android:launchMode="singleTop" >
        </activity>
        <activity
            android:name=".ExecWingDisp"
            android:label="@string/title_execwing">
        </activity>
        <activity
            android:name=".PopUpActivity"
            android:label="@string/title_popup">
            
        </activity>
    </application>

</manifest>
